<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ten.dmitry.locationapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChooseBeaconActivity"
            android:label="@string/title_activity_choose_beacon"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ChooseRouteActivity" />
        <activity android:name=".ExecuteRouteActivity" />
        <activity android:name=".ManageRouteActivity" />
        <activity android:name=".CreateRoutActivity" />
        <activity android:name=".EditRouteActivity"></activity>
    </application>

</manifest>
